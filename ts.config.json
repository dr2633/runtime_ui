{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "ESNext"],
      "module": "ESNext",
      "moduleResolution": "Node",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "resolveJsonModule": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  